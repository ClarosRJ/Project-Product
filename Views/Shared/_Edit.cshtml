<script>
    $(document).ready(function(){
        $(this).scrollTop(0);
        rebindvalidator();
    });
    function rebindvalidator(){
        var $form = $("#EditForm");
        $form.unbind();
        $form.data("validator",null);
        $.validator.unobtrusive.parse($form);
        $form.validate($form.data("unobtrusiveValidation").options);
    }
</script>